{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "MassTransit": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs\\applog.txt",
          "fileSizeLimitBytes": 2000000,
          "rollOnFileSizeLimit": true,
          "retainedFileCountLimit": 5,
          "outputTemplate": "{Timestamp:MM/dd/yy HH:mm:ss.fff} [{Level:u3}] [{SourceContext:l}{CallerInfo:l}] [ThreadId: {ThreadId}] {Message}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithThreadId" ]
  },
  "RabbitMq": {
    "Host": "localhost"
  },
  "Activities": {
    "ValidateActivity": {
      "PrefetchCount": 100,
      "QueueName": "execute_validate",
      "RetryLimit": 5
    },
    "RetrieveActivity": {
      "PrefetchCount": 100,
      "QueueName": "execute_retrieve",
      "RetryLimit": 5
    },
    "CompensateRetrieveActivity": {
      "PrefetchCount": 100,
      "QueueName": "compensate_retrieve",
      "RetryLimit": 5
    }
  }
}
